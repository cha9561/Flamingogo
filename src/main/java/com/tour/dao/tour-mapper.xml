<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tour.dao.tour-mapper">
	<select id="tourContent" resultType="String" parameterType="int">
		SELECT pname
		FROM product
		WHERE pno=#{pno}
	</select>
	<select id="tourContent2" resultType="Product" parameterType="int">
		SELECT pname,psubname,category,course,time,info,price
		FROM product
		WHERE pno=#{pno}
	</select>
	<select id="tourCount" resultType="int" parameterType="String">
		SELECT COUNT(*) FROM product
	</select>
</mapper>